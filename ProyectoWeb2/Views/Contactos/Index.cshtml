@model IEnumerable<ProyectoWeb2.Models.Contactos>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}

<h2>Index</h2>

<p>
    <a class="waves-effect waves-light btn" asp-action="Create">Create New</a>
</p>
<table class="responsive-table"style="color:white">
    <thead>
        <tr  style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                    @Html.DisplayNameFor(model => model.apellidos)
                </th>
                <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                    @Html.DisplayNameFor(model => model.Correo_electrónico)
                </th>
                <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                    @Html.DisplayNameFor(model => model.Número_telefónico)
                </th>
                <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                    @Html.DisplayNameFor(model => model.Puesto)
                </th>
            <th style="width: auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                @Html.DisplayNameFor(model => model.Cliente.Nombre)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
        
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                @Html.DisplayFor(modelItem => item.apellidos)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
          
                @Html.DisplayFor(modelItem => item.Correo_electrónico)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
          
                @Html.DisplayFor(modelItem => item.Número_telefónico)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
     
                @Html.DisplayFor(modelItem => item.Puesto)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td style="width:  auto;text-align: left;vertical-align: top; border: 1px solid #000; border-spacing: 0;">
                <a asp-action="Edit" asp-route-id="@item.id" class="Small material-icons">create</a>
                <a asp-action="Delete" asp-route-id="@item.id" class="Small material-icons">delete_forever</a>
                <a asp-action="Details" asp-route-id="@item.id" class="Small material-icons">description</a>
            </td>
        </tr>
}
    </tbody>
</table>
